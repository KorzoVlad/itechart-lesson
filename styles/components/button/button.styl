@import "../../variables.styl";

.button {
    font: 1em "SourceSansProBold", sans-serif;
    line-height: 1;
    color: $white;
    background: $juniper;
    padding: 9px 17px;
    border: 0;
    border-radius: 4px;
    outline: none;
    cursor: pointer;

    &--alert {
        background: $hot-cinnamon;
    }
}