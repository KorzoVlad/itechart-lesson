@import "../../variables.styl";

.nav {
    &__list {
        flex-row();
    }

    &__item {
        margin-left: 50px;
        position: relative;

        &:first-child {
            margin-left: 0;
        }

        &--active {
            .nav__link {
                color: $hot-cinnamon;
            }

            .nav__arrow {
                display: block;
            }
        }
    }

    &__link {
        display: block;
        font: 1em "SourceSansProBold", sans-serif;
        line-height: 1;
        text-transform: uppercase;
        color: $juniper;
    }

    &__arrow {
        display: none;
        width: 14px;
        height: 11px;
        position: absolute;
        transition: all .6s ease;
        transform: scale(1);
        cursor: pointer;
        top: -20px;
        left: 50%;
        margin-left: -7px;

        &__left,
        &__right {
            display: inline-block;
            position: absolute;
            height: 2px;
            width: 5px;
            top: 5px;
            background: $juniper;
            border-radius: 5px;
        }

        &__left {
            left: 3px;
            transform: rotate(40deg);
        }

        &__right {
            right: 3px;
            transform: rotate(-40deg);
        }
    }

}